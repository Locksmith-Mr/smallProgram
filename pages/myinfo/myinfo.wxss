.myinfobody {
  background: #f5f5f5;
  height: 100%;
}

.userpic {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userpic image {
  top: 10%;
  position: relative;
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.line {
  height: 2px;
  background: #f5f5f5;
  width: 100%;
}

.cardcontent {
  font-size: 28rpx;
  text-align: center;
}

.card {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 0px 4px 10px #ccc;
  margin: 8px;
  /* text-align: center; */
}

.sortRowsIcon {
  float: left;
  margin: 10rpx 0 20rpx 0;
}

.sortRowsIcon image {
  width: 80rpx;
  height: 80rpx;
}

.sortRowsIcon text {
  display: block;
}

.option {
  margin-left: 30rpx;
  top: 50%;
  line-height: 100rpx;
  height: 100rpx;
}
