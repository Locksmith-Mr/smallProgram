/* pages/home/home.wxss */

/* 轮播图 */

.u-wrp-bnr {
  width: 100%;
  display: block;
  position: relative;
  background: #f0f0f0;
}

.u-img-slide {
  width: 100%;
  height: inherit;
}

/*分类*/

.sorts-wrap {
  font-size: 28rpx;
  text-align: center;
}

.sorts-wrap .flex-wrap {
  float: left;
  margin: 10rpx 0 20rpx 0;
  width: 25%;
}

.sorts-wrap navigator image {
  width: 80rpx;
  height: 80rpx;
}

.sorts-wrap navigator text {
  display: block;
}

/* 分割线 */
.splitline{
  width:100%;height:10px; background:#E0E0E0;
}

/* 清除浮动 */
.clear{
  clear:both;
}
/* 产品列表 */
.card {
    /* border: 2px solid #ffffff; */
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: -5px 5px 5px #cccccc,0px 10px 10px #cccccc;
    margin: 8px;
    text-align: center;
}
.image {
    width: 100%;
    height: 200px;
    background-color: #eeeeee;
}


